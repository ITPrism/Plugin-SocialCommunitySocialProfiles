<?xml version="1.0" encoding="utf-8"?>
<extension version="3.7" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_SCSOCIALPROFILES</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2017 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.en.html GNU/GPLv3</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.1</version>
    <creationDate>08 September, 2017</creationDate>
    <description><![CDATA[
    <p>Content - SocialCommunity Social Profiles is a plugin that displays the links to user profiles on social networks.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/extension/e-commerce/donations/crowdfunding" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
    
    <help url="PLG_CONTENT_SCSOCIALPROFILES_HELP_URL"/>
    
    <files>
        <filename plugin="scsocialprofiles">scsocialprofiles.php</filename>
        <folder>language</folder>
    </files>
    
    <config>
		<fields name="params">
			<fieldset name="basic">
				<field name="display_website" type="radio" default="1" label="PLG_CONTENT_SCSOCIALPROFILES_DISPLAY_WEBSITE" description="PLG_CONTENT_SCSOCIALPROFILES_DISPLAY_WEBSITE_DESC"  class="btn-group">
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
                </field>
                <field name="display_facebook" type="radio" default="1" label="PLG_CONTENT_SCSOCIALPROFILES_DISPLAY_FACEBOOK" description="PLG_CONTENT_SCSOCIALPROFILES_DISPLAY_FACEBOOK_DESC"  class="btn-group">
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
                </field>
                <field name="display_twitter" type="radio" default="1" label="PLG_CONTENT_SCSOCIALPROFILES_DISPLAY_TWITTER" description="PLG_CONTENT_SCSOCIALPROFILES_DISPLAY_TWITTER_DESC"  class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
			</fieldset>
        </fields>
	</config>

    <updateservers>
        <server type="extension" priority="1" name="Content - SocialCommunity Social Profiles">http://cdn.itprism.com/updates/socialcommunity/plg_scsocialprofiles.xml</server>
    </updateservers>
</extension>
